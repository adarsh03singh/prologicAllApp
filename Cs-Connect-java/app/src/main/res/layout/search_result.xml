<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/search_result_parent"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp">

    <ImageView
        android:id="@+id/search_result_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/ic_location_on_black_24dp"
        android:tint="@color/brown_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_result_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:textStyle="bold"
            android:text="Project"/>

        <TextView
            android:id="@+id/search_result_project_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:text="Location"/>

        <TextView
            android:id="@+id/search_result_city_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            android:text="City"/>

    </LinearLayout>




</LinearLayout>