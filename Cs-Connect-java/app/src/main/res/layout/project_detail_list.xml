                    app:trimExpandedText="Show More"
                    app:trimLength="3"
                    app:trimMode="trimModeLine" />
-->
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gotham_rnd_book"
                    android:paddingStart="12sp"
                    android:text="Wow Factors"
                    android:textColor="@color/colorButton"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">


                    <!--<TextView
                        android:id="@+id/wow_factors_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/gotham_rnd_book"
                        android:paddingStart="12sp"
                        android:text=" Located on Main Road" />-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/wow_factors_recyclerviewTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5sp"
                        android:paddingStart="12sp">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gotham_rnd_book"
                        android:text="Connecting Roads"
                        android:textColor="@color/colorButton"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/connecting_roads_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/gotham_rnd_book"
                        android:text="Metro Station--1.5 Km"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12sp">

                    <TextView
                        android:id="@+id/developer_name_txtHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gotham_rnd_book"
                        android:text="Developer Name"
                        android:textColor="@color/colorButton"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/developer_icon_image"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:fontFamily="@font/gotham_rnd_book"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="12sp">

                            <TextView
                                android:id="@+id/developer_name_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/gotham_rnd_book"
                                android:text="Developer Name"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/developer_totalNoOfProject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/gotham_rnd_book"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/gotham_rnd_book"
                        android:text="*Disclaimer"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                 <!--   <com.borjabravo.readmoretextview.ReadMoreTextView
                        android:id="@+id/developer_description_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:fontFamily="@font/gotham_rnd_book"
                        android:paddingStart="12sp"
                        android:paddingRight="8sp"
                        android:text="Commission this is nothin"
                        android:textSize="15dp"
                        app:colorClickableText="@color/colorAccent"
                        app:trimCollapsedText="Less More"
                        app:trimExpandedText="Show More"
                        app:trimLength="3"
                        app:trimMode="trimModeLine" />
-->

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gotham_rnd_book"
                        android:text="RERA Registration"
                        android:textColor="@color/colorButton"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rera_no_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:background="@android:color/holo_green_dark"
                        android:fontFamily="@font/gotham_rnd_book"
                        android:text="838737882732"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8sp"
                    android:layout_marginRight="8sp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/gotham_rnd_book"
                        android:text="Amenities"
                        android:textColor="@color/colorButton"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- <android.support.v7.widget.Toolbar
                         android:id="@+id/ameneties_toolbar"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:minHeight="?attr/actionBarSize"/>-->


                    <android.support.design.widget.TabLayout
                        android:id="@+id/amenities_tablayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:elevation="4sp"
                        android:minHeight="?attr/actionBarSize"
                        app:tabGravity="fill"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@color/colorPrimaryDark"
                        app:tabTextColor="@color/colorPrimary" />


                    <android.support.v4.view.ViewPager
                        android:id="@+id/amenities_viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="200sp">

                        <FrameLayout
                            android:id="@+id/frameLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </android.support.v4.view.ViewPager>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>