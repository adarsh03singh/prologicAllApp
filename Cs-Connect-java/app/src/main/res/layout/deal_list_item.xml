<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deal_parent_layout"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5sp"
                android:paddingStart="12sp"
                android:layout_weight="0.2">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Deal Id"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/deal_id"
                    android:text="Deal Id"
                    android:textSize="12sp"
                    android:paddingTop="5sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:background="@color/white_smoke"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5sp"
                android:paddingStart="12sp"
                android:layout_weight="0.4">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Deal Date"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/deal_date"
                    android:text="Deal Date"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="5sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:background="@color/white_smoke"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5sp"
                android:paddingStart="12sp"
                android:layout_weight="0.4">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Status"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/deal_status"
                    android:textSize="12sp"
                    android:text="Status"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="5sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/white_smoke"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5sp"
            android:paddingStart="12sp">

            <TextView
                android:id="@+id/deal_client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Client Name"
                android:paddingTop="5sp"
                android:paddingBottom="2sp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/deal_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project Name "
                android:paddingBottom="5sp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/white_smoke"
            android:layout_height="1dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5sp"
                android:paddingStart="12sp"
                android:layout_weight="0.42">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Total Commission"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/deal_total_amount"
                    android:layout_width="wrap_content"
                    android:text="Total Amount"
                    android:textSize="12sp"
                    android:paddingTop="5sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:background="@color/white_smoke"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5sp"
                android:paddingStart="12sp"
                android:layout_weight="0.42">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Comission Payable"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/deal_payble_amount"
                    android:layout_width="wrap_content"
                    android:text="Payble Amount"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="5sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:background="@color/white_smoke"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/dealImageViewUp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_up_black"
                android:background="@color/colorPrimary"
                android:layout_weight="0.16"/>

            <ImageView
                android:id="@+id/dealImageViewDown"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:src="@drawable/arrow_down_black"
                android:background="@color/colorPrimary"
                android:layout_weight="0.16"/>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/deal_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:background="@color/white_smoke"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    android:paddingStart="12sp"
                    android:weightSum="1.0">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="12sp"
                        android:layout_weight="0.3"/>


                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/deal_email"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Client Email"
                        android:textSize="12sp"
                        android:layout_weight="0.7"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    android:paddingStart="12sp"
                    android:weightSum="1.0">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textSize="12sp"
                        android:layout_weight="0.3"/>


                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/deal_phone_number"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Client Mobile"
                        android:textSize="12sp"
                        android:layout_weight="0.7"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>