<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="8dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/project_image"
        android:maxHeight="170sp"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_image"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_row">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="8dp"
                android:text="Name" />

            <TextView
                android:id="@+id/project_available_bhks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="8dp"
                android:layout_weight="3"
                android:text="BHK" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/second_row">

            <TextView
                android:id="@+id/project_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Address" />

            <TextView
                android:id="@+id/project_price_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:gravity="right"
                android:layout_weight="3"
                android:text="Price" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_smoke"
            android:weightSum="1"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="0.5"
                android:padding="8dp"/>

            <ProgressBar
                android:id="@+id/statusProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:visibility="gone"
                android:layout_height="6dp"
                android:layout_marginStart="3sp"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:progress="50"
                android:progressTint="@android:color/holo_green_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/fourth_row"
            android:layout_weight="1">

            <TextView
                android:id="@+id/project_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.5"
                android:padding="8dp"
                android:text="Type" />

            <View
                android:layout_width="3sp"
                android:layout_height="match_parent"
                android:background="@color/white_smoke"/>

            <TextView
                android:id="@+id/project_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:layout_weight="0.5"
                android:text="Status" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
</android.support.v7.widget.CardView>