<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2sp">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38sp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:weightSum="1.0"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:background="@drawable/unit_plan_details_recycler_view_border"

        >

            <TextView
                    android:id="@+id/unit_item_position"
                    android:layout_width="match_parent"
                    android:layout_height="38sp"
                    android:layout_weight="0.8"
                    android:text="text"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:background="@drawable/unit_plan_details_recycler_number_background"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_bold"

            />

            <TextView
                    android:id="@+id/unit_component_name"
                    android:layout_width="match_parent"
                    android:layout_height="38sp"
                    android:layout_weight="0.2"
                    android:text="text"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:gravity="center"


            />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
