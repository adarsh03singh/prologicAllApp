<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/constraintLayout">


    <LinearLayout
        android:id="@+id/unit_plan_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/unit_plan_image"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
               android:scaleType="fitXY"
            android:src="@drawable/win_diesel"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20sp"
                android:paddingLeft="10sp"
                android:layout_weight="0.5"
                android:orientation="vertical">

            <TextView
                android:id="@+id/unit_plan_propertyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appartment"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/unit_plan_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="1350 Sq. Ft."
                    android:textSize="11sp"
                    android:textColor="@android:color/black"/>


            <TextView
                android:id="@+id/unit_plan_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:text="INR 1.2 Lac - 1.9 Lac"
                    android:textSize="11sp"
                    android:textColor="@android:color/black"/>



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>