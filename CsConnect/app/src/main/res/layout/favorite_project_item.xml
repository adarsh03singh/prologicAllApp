<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/block_layout">


    <androidx.cardview.widget.CardView
        android:id="@+id/fav_projctMainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        app:cardElevation="0.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/projectImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:foreground="@drawable/gradient_image_background"
                        android:src="@drawable/img" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/high_commisiionBookmark"
                        android:layout_width="50sp"
                        android:layout_height="30dp"
                        android:layout_gravity="top|left"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_exclusive_hc" />

                    <TextView
                        android:id="@+id/favProject_reraRegisteredViewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_marginBottom="5sp"
                        android:paddingStart="10sp"
                        android:text="RERA Registered"
                        android:textAllCaps="true"
                        android:textColor="@color/Orange"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginEnd="10sp"
                        android:layout_marginStart="10sp">

                        <TextView
                            android:id="@+id/projectName"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.3"
                            android:text="Mahagun Marvella"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/project_bookmark_id"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="0.7"
                            android:layout_marginStart="15sp"
                            android:layout_marginEnd="5sp"
                            android:layout_marginTop="5sp"
                            android:background="@null"
                            android:src="@drawable/delete_bookmark"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10sp">


                    <TextView
                        android:id="@+id/projectAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3sp"
                        android:text="Sector-78, Noida"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/projectPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:text="12 Lac- 19 Lac"
                        android:textColor="@color/Orange"
                        android:textSize="12sp" />


                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12sp"
                        android:layout_marginStart="10sp"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/projectStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5sp"
                            android:background="#098F2C"
                            android:gravity="center"
                            android:text="Ready to move"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>


